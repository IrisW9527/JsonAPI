
<h1>Character Details: <%= @search_term %></h1>
<h2><a href="http://127.0.0.1:3000/products/index">Home</a></h2>

<div class="table-responsive">
	<div class="navbar-header">
		<table class="table table-striped table-bordered">
			<thead class="thead-dark">
				<tr>
					<th scope="col">Name</th>
					<th scope="col">Occupation</th>
					<th scope="col">Birthday</th>
					<th scope="col">Status</th>
					<th scope="col">Image</th>
				</tr>
			</thead>

			<tbody class="table table-striped">
				<% @results.each do |product| %>
					<tr>
						<td scope="row"><%= product['name'] %></td>
						<td scope="row"><%= product['occupation'] %></td>
						<td scope="row"><%= product['birthday'] %></td>
						<td scope="row"><%= product['status'] %></td>
						<td scope="row"><%= image_tag(product['img']) %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
